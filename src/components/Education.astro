---
interface Education {
  institution: string;
  degree: string;
  period: string;
  achievements?: string[];
}

interface Props {
  education: Education[];
}

const { education } = Astro.props;
---

<section class="education section" id="education" aria-labelledby="education-title">
  <div class="container">
    <h2 id="education-title" class="section-title">Education</h2>

    <div class="education-grid">
      {education.map((edu) => (
        <article class="education-card">
          <div class="education-icon" aria-hidden="true">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 10v6M2 10l10-5 10 5-10 5z"/>
              <path d="M6 12v5c3 3 9 3 12 0v-5"/>
            </svg>
          </div>

          <div class="education-content">
            <h3 class="institution">{edu.institution}</h3>
            <p class="degree">{edu.degree}</p>
            <time class="period">{edu.period}</time>

            {edu.achievements && edu.achievements.length > 0 && (
              <ul class="achievements" role="list">
                {edu.achievements.map((achievement) => (
                  <li>{achievement}</li>
                ))}
              </ul>
            )}
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .education {
    background: var(--color-primary-light);
  }

  .education-grid {
    display: grid;
    gap: var(--spacing-lg);
    max-width: 800px;
  }

  .education-card {
    display: flex;
    gap: var(--spacing-xl);
    background: var(--color-bg-card);
    border-radius: var(--radius-lg);
    padding: var(--spacing-xl);
    border: 1px solid var(--color-border);
    transition: all var(--transition-base);
  }

  .education-card:hover {
    border-color: var(--color-accent);
    transform: translateX(8px);
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
  }

  .education-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 64px;
    height: 64px;
    background: var(--color-accent-muted);
    border-radius: var(--radius-lg);
    color: var(--color-accent);
    flex-shrink: 0;
  }

  .education-content {
    flex: 1;
  }

  .institution {
    font-size: var(--font-size-xl);
    color: var(--color-text-primary);
    margin-bottom: var(--spacing-xs);
  }

  .degree {
    font-size: var(--font-size-base);
    color: var(--color-accent);
    font-weight: 500;
    margin-bottom: var(--spacing-xs);
  }

  .period {
    display: block;
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    margin-bottom: var(--spacing-md);
  }

  .achievements {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
  }

  .achievements li {
    position: relative;
    padding-left: var(--spacing-lg);
    color: var(--color-text-secondary);
    font-size: var(--font-size-sm);
  }

  .achievements li::before {
    content: '';
    position: absolute;
    left: 0;
    top: 8px;
    width: 6px;
    height: 6px;
    background: var(--color-accent);
    border-radius: 50%;
  }

  @media (max-width: 640px) {
    .education-card {
      flex-direction: column;
      gap: var(--spacing-md);
      text-align: center;
    }

    .education-icon {
      margin: 0 auto;
    }

    .education-card:hover {
      transform: translateY(-4px);
    }

    .achievements {
      text-align: left;
    }
  }
</style>
