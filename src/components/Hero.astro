---
interface Props {
  name: string;
  role: string;
  summary: string;
  email: string;
  phone: string;
  linkedin: string;
  avatarUrl?: string;
}

const { name, role, summary, email, phone, linkedin, avatarUrl } = Astro.props;
---

<section class="hero" id="home" aria-labelledby="hero-title">
  <div class="container hero-container">
    <div class="hero-content">
      <p class="hero-greeting">Hello, I'm</p>
      <h1 id="hero-title" class="hero-name">{name}</h1>
      <p class="hero-role">{role}</p>
      <p class="hero-summary">{summary}</p>

      <div class="hero-contact">
        <a href={`mailto:${email}`} class="contact-link" aria-label="Send email">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
            <rect width="20" height="16" x="2" y="4" rx="2"/>
            <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
          </svg>
          <span>{email}</span>
        </a>
        <a href={`tel:${phone}`} class="contact-link" aria-label="Call phone">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
          </svg>
          <span>{phone}</span>
        </a>
        <a href={linkedin} target="_blank" rel="noopener noreferrer" class="contact-link" aria-label="LinkedIn profile (opens in new tab)">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
            <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/>
            <rect width="4" height="12" x="2" y="9"/>
            <circle cx="4" cy="4" r="2"/>
          </svg>
          <span>LinkedIn</span>
        </a>
      </div>

      <div class="hero-cta">
        <a href="#experience" class="btn btn-primary">View My Work</a>
        <a href="#contact" class="btn btn-secondary">Get In Touch</a>
      </div>
    </div>

    <div class="hero-avatar">
      {avatarUrl ? (
        <img src={avatarUrl} alt={`Photo of ${name}`} class="avatar-image" loading="eager" />
      ) : (
        <div class="avatar-placeholder" aria-hidden="true">
          <svg xmlns="http://www.w3.org/2000/svg" width="120" height="120" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
            <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"/>
            <circle cx="12" cy="7" r="4"/>
          </svg>
        </div>
      )}
    </div>
  </div>
</section>

<style>
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding: var(--spacing-3xl) 0;
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-light) 100%);
  }

  .hero-container {
    display: grid;
    grid-template-columns: 55% 45%;
    gap: var(--spacing-2xl);
    align-items: center;
  }

  .hero-content {
    order: 1;
  }

  .hero-greeting {
    font-size: var(--font-size-lg);
    color: var(--color-accent);
    font-weight: 500;
    margin-bottom: var(--spacing-sm);
  }

  .hero-name {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 800;
    margin-bottom: var(--spacing-sm);
    background: linear-gradient(135deg, var(--color-text-primary) 0%, var(--color-accent) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-role {
    font-size: var(--font-size-2xl);
    color: var(--color-text-secondary);
    margin-bottom: var(--spacing-lg);
    font-weight: 600;
  }

  .hero-summary {
    font-size: var(--font-size-lg);
    color: var(--color-text-secondary);
    line-height: 1.8;
    margin-bottom: var(--spacing-xl);
    max-width: 540px;
  }

  .hero-contact {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-xl);
  }

  .contact-link {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-sm);
    color: var(--color-text-secondary);
    font-size: var(--font-size-sm);
    padding: var(--spacing-sm) var(--spacing-md);
    background: var(--color-bg-card);
    border-radius: var(--radius-md);
    transition: all var(--transition-fast);
  }

  .contact-link:hover {
    color: var(--color-accent);
    background: var(--color-bg-card-hover);
    transform: translateY(-2px);
  }

  .hero-cta {
    display: flex;
    gap: var(--spacing-md);
    flex-wrap: wrap;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-md) var(--spacing-xl);
    font-size: var(--font-size-base);
    font-weight: 600;
    border-radius: var(--radius-md);
    transition: all var(--transition-fast);
  }

  .btn-primary {
    background: var(--color-accent);
    color: var(--color-primary);
  }

  .btn-primary:hover {
    background: var(--color-accent-hover);
    color: var(--color-primary);
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(6, 182, 212, 0.3);
  }

  .btn-secondary {
    background: transparent;
    color: var(--color-text-primary);
    border: 2px solid var(--color-border);
  }

  .btn-secondary:hover {
    border-color: var(--color-accent);
    color: var(--color-accent);
    transform: translateY(-2px);
  }

  .hero-avatar {
    order: 2;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .avatar-image {
    width: 100%;
    max-width: 400px;
    aspect-ratio: 1;
    object-fit: cover;
    border-radius: var(--radius-xl);
    border: 4px solid var(--color-accent);
    box-shadow: 0 20px 60px rgba(6, 182, 212, 0.2);
  }

  .avatar-placeholder {
    width: 100%;
    max-width: 400px;
    aspect-ratio: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-bg-card);
    border-radius: var(--radius-xl);
    border: 4px solid var(--color-accent);
    color: var(--color-text-muted);
  }

  @media (max-width: 968px) {
    .hero-container {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .hero-content {
      order: 2;
    }

    .hero-avatar {
      order: 1;
    }

    .hero-summary {
      max-width: 100%;
    }

    .hero-contact {
      justify-content: center;
    }

    .hero-cta {
      justify-content: center;
    }

    .avatar-image,
    .avatar-placeholder {
      max-width: 280px;
    }
  }

  @media (max-width: 480px) {
    .hero-contact {
      flex-direction: column;
      align-items: center;
    }

    .contact-link {
      width: 100%;
      justify-content: center;
    }

    .hero-cta {
      flex-direction: column;
      width: 100%;
    }

    .btn {
      width: 100%;
    }
  }
</style>
