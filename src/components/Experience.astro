---
interface Job {
  company: string;
  role: string;
  period: string;
  description: string;
  responsibilities: string[];
  current?: boolean;
}

interface Props {
  jobs: Job[];
}

const { jobs } = Astro.props;
---

<section class="experience section" id="experience" aria-labelledby="experience-title">
  <div class="container">
    <h2 id="experience-title" class="section-title">Work Experience</h2>

    <div class="timeline" role="list">
      {jobs.map((job, index) => (
        <article class="timeline-item" role="listitem">
          <div class="timeline-marker" aria-hidden="true">
            <div class={`marker-dot ${job.current ? 'current' : ''}`}></div>
            {index < jobs.length - 1 && <div class="marker-line"></div>}
          </div>

          <div class="timeline-content">
            <header class="job-header">
              <div class="job-info">
                <h3 class="job-company">{job.company}</h3>
                <p class="job-role">{job.role}</p>
              </div>
              <div class="job-period">
                {job.current && <span class="current-badge">Current</span>}
                <time>{job.period}</time>
              </div>
            </header>

            <p class="job-description">{job.description}</p>

            <ul class="job-responsibilities" role="list">
              {job.responsibilities.map((item) => (
                <li>{item}</li>
              ))}
            </ul>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .experience {
    background: var(--color-bg);
  }

  .timeline {
    position: relative;
    max-width: 900px;
  }

  .timeline-item {
    display: flex;
    gap: var(--spacing-xl);
    padding-bottom: var(--spacing-2xl);
  }

  .timeline-item:last-child {
    padding-bottom: 0;
  }

  .timeline-marker {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex-shrink: 0;
  }

  .marker-dot {
    width: 16px;
    height: 16px;
    border-radius: 50%;
    background: var(--color-primary-lighter);
    border: 3px solid var(--color-border);
    z-index: 1;
    transition: all var(--transition-fast);
  }

  .marker-dot.current {
    background: var(--color-accent);
    border-color: var(--color-accent);
    box-shadow: 0 0 20px rgba(6, 182, 212, 0.5);
  }

  .marker-line {
    width: 2px;
    flex: 1;
    background: var(--color-border);
    margin-top: var(--spacing-sm);
  }

  .timeline-content {
    flex: 1;
    background: var(--color-bg-card);
    border-radius: var(--radius-lg);
    padding: var(--spacing-xl);
    border: 1px solid var(--color-border);
    transition: all var(--transition-base);
  }

  .timeline-item:hover .timeline-content {
    border-color: var(--color-accent);
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
  }

  .timeline-item:hover .marker-dot {
    border-color: var(--color-accent);
  }

  .job-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-md);
    flex-wrap: wrap;
  }

  .job-company {
    font-size: var(--font-size-xl);
    color: var(--color-text-primary);
    margin-bottom: var(--spacing-xs);
  }

  .job-role {
    font-size: var(--font-size-base);
    color: var(--color-accent);
    font-weight: 500;
  }

  .job-period {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: var(--spacing-xs);
    text-align: right;
  }

  .job-period time {
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
  }

  .current-badge {
    display: inline-block;
    background: var(--color-accent-muted);
    color: var(--color-accent);
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: var(--radius-full);
    font-size: var(--font-size-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .job-description {
    color: var(--color-text-secondary);
    font-size: var(--font-size-sm);
    margin-bottom: var(--spacing-md);
    line-height: 1.7;
  }

  .job-responsibilities {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
  }

  .job-responsibilities li {
    position: relative;
    padding-left: var(--spacing-lg);
    color: var(--color-text-secondary);
    font-size: var(--font-size-sm);
    line-height: 1.6;
  }

  .job-responsibilities li::before {
    content: '';
    position: absolute;
    left: 0;
    top: 8px;
    width: 6px;
    height: 6px;
    background: var(--color-accent);
    border-radius: 50%;
  }

  @media (max-width: 768px) {
    .timeline-item {
      gap: var(--spacing-md);
    }

    .timeline-content {
      padding: var(--spacing-lg);
    }

    .job-header {
      flex-direction: column;
    }

    .job-period {
      align-items: flex-start;
      text-align: left;
    }
  }

  @media (max-width: 480px) {
    .timeline-marker {
      display: none;
    }

    .timeline-content {
      border-left: 3px solid var(--color-accent);
    }
  }
</style>
